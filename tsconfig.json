{
  "compilerOptions": {
    "jsx": "react-jsx", // JSXの設定（React 17以降の場合）
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["DOM", "ESNext"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "baseUrl": ".", // プロジェクトのルートを基準にする
    "paths": {
      "@/*": ["./src/*"] // "@" を "src" ディレクトリにマッピング
    }
  }
}